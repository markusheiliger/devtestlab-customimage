{
	"variables": {
		"image": "",
		"version": "",
		"location": "",
		"subscription": "",
		"resourceGroup": "",
		"galleryName": ""
	},
	"builders": [
		{
			"type": "azure-arm",
			"use_azure_cli_auth": true,
			"os_type": "Linux",
			"image_publisher": "Canonical",
			"image_offer": "UbuntuServer",
			"image_sku": "18.04-LTS",
			"location": "{{user `location`}}",
			"vm_size": "Standard_B1s",
			"managed_image_name": "{{user `image`}}",
			"managed_image_resource_group_name": "{{user `resourceGroup`}}",
			"shared_image_gallery_destination": {
				"subscription": "{{user `subscription`}}",
				"resource_group": "{{user `resourceGroup`}}",
				"gallery_name": "{{user `galleryName`}}",
				"image_name": "{{user `image`}}",
				"image_version": "{{user `version`}}",
				"replication_regions": [
					"{{user `location`}}"
				],
				"storage_account_type": "Standard_LRS"
			}
		}
	],
	"provisioners": [
		{
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
			"inline": [
				"apt-get update",
				"apt-get upgrade -y",
				"apt-get install git jq tree wget lolcat aptitude stress -y"
			],
			"inline_shebang": "/bin/sh -x",
			"type": "shell"
		},
		{
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
			"inline": [
				"/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
			],
			"inline_shebang": "/bin/sh -x",
			"type": "shell"
		}
	]
}